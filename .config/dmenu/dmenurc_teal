#
# ~/.dmenurc
# TEAL

## define the font for dmenu to be used
DMENU_FN="Monospace:bold:pixelsize=14"

## background colour for unselected menu-items
DMENU_NB="#191919"

## textcolour for unselected menu-items
DMENU_NF="#5b8787"

## background colour for selected menu-items
DMENU_SB="#5b8787"

## textcolour for selected menu-items
DMENU_SF="#191919"

## export our variables
export DMENU_OPTIONS="-h 25 -fn $DMENU_FN -nb $DMENU_NB -nf $DMENU_NF -sf $DMENU_SF -sb $DMENU_SB"

export DMENU="dmenu_run -i $DMENU_OPTIONS"